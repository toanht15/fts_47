<% provide :title, t("admin_all_users") %>
<h1><%= t "admin_all_users" %></h1>

<div class="container">
  <div class="form-horizontal">
  <fieldset>
    <%= search_form_for [:admin, @search] do |f| %>
      <div class="form-group">
        <div class="col-lg-3">
          <%= f.text_field :name_eq, class: "form-control", placeholder: t("user_search.name_holder") %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :email_eq, class: "form-control", placeholder: t("user_search.email_holder") %>
        </div>
        <div class="col-lg-1">
          <%= f.submit t("search"), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </fieldset>
  </div>
  <table class="table table-bordered">
    <tbody>
      <%= render @users %>
    </tbody>
  </table>
</div>
<%= will_paginate %>
